{
  "compilerOptions": {
    "lib": ["es2022", "DOM"],
    "module": "commonjs",
    "target": "es2022",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "typeRoots": ["./node_modules/@types", "./@types"]
  },
  "exclude": ["node_modules"]
}
